    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "37.7.1",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  },
  "engines": {
    "node": "12.18.1"
  }
